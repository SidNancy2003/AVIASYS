@page
@model AVIASYS1.Pages.Employee.IndexModel
@{
    ViewData["Title"] = "Панель сотрудника";
}

<div class="container">
    <h1>Панель сотрудника</h1>
    <p>Добро пожаловать, @Model.UserName!</p>

    <div class="mt-4">
        <h3>Мои задачи</h3>

        @if (Model.MyTasks.Any())
        {
            <div class="row">
                @foreach (var task in Model.MyTasks)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-header bg-@(GetStatusColor(task.Status)) text-white">
                                <strong>@task.Title</strong>
                            </div>
                            <div class="card-body">
                                <p class="card-text">@task.Description</p>
                                <p><strong>Статус:</strong> @task.Status</p>
                                <p><strong>Создана:</strong> @task.CreatedDate.ToString("dd.MM.yyyy")</p>
                                @if (task.Deadline.HasValue)
                                {
                                    <p><strong>Срок:</strong> @task.Deadline.Value.ToString("dd.MM.yyyy")</p>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                У вас пока нет назначенных задач.
            </div>
        }
    </div>

    <div class="mt-3">
        <a href="/Auth?handler=Logout" class="btn btn-outline-danger">🚪 Выйти из системы</a>
    </div>
</div>

@functions {
    public string GetStatusColor(string status)
    {
        return status switch
        {
            "Новая" => "secondary",
            "В работе" => "primary",
            "Завершена" => "success",
            "На паузе" => "warning",
            _ => "light"
        };
    }
}
