@page "{id:int}"
@model AVIASYS1.Pages.Admin.Workshops.EditWorkshopModel
@{
    ViewData["Title"] = "Редактирование цеха";
}

<h2>Редактирование цеха</h2>

<form method="post">
    <input type="hidden" asp-for="Workshop.Id" />

    <div class="mb-3">
        <label class="form-label">Название</label>
        <input asp-for="Workshop.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Описание</label>
        <textarea asp-for="Workshop.Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Руководитель</label>
        <select asp-for="Workshop.ManagerId" class="form-select">
            <option value="">Без руководителя</option>
            @foreach (var m in Model.Managers)
            {
                <option value="@m.Id" selected="@(Model.Workshop.ManagerId == m.Id)">
                    @m.FullName
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <button type="submit" asp-page-handler="Delete" asp-route-id="@Model.Workshop.Id" class="btn btn-danger">Удалить</button>
    <a asp-page="Workshops" class="btn btn-secondary">Отмена</a>
</form>
