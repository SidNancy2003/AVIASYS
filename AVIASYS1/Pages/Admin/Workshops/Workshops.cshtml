@page
@model AVIASYS1.Pages.Admin.Workshops.WorkshopsModel
@{
    ViewData["Title"] = "Управление цехами";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-page="EditWorkshop" class="btn btn-success">Создать цех</a>
</div>

<table class="table table-bordered table-striped align-middle">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Руководитель</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Workshops != null && Model.Workshops.Any())
        {
            @foreach (var w in Model.Workshops)
            {
                <tr>
                    <td>@w.Id</td>
                    <td>@w.Name</td>
                    <td>@w.Description</td>
                    <td>@Model.GetManagerName(w.ManagerId)</td>
                    <td>
                        <a asp-page="EditWorkshop" asp-route-id="@w.Id" class="btn btn-sm btn-primary">
                            Редактировать
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Нет цехов</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="/Admin/Index" class="btn btn-secondary">🏠 Главное меню</a>
</div>
