@page "{id:int}"
@model AVIASYS1.Pages.Admin.Employees.EditEmployeeModel
@{
    ViewData["Title"] = "Редактирование сотрудника";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="Employee.Id" />

    <div class="mb-3">
        <label class="form-label">ФИО</label>
        <input asp-for="Employee.FullName" class="form-control" />
        <span asp-validation-for="Employee.FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Логин</label>
        <input asp-for="Employee.Login" class="form-control" />
        <span asp-validation-for="Employee.Login" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Пароль</label>
        <input asp-for="Employee.Password" class="form-control" placeholder="(оставьте пустым, если не менять)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Роль</label>
        <select asp-for="Employee.Role" class="form-select">
            <option value="Employee">Сотрудник</option>
            <option value="Manager">Руководитель</option>
            <option value="Admin">Администратор</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Цех</label>
        <select asp-for="Employee.WorkshopId" class="form-select">
            <option value="">— Без цеха —</option>
            @foreach (var w in Model.Workshops)
            {
                <option value="@w.Id" selected="@(Model.Employee.WorkshopId == w.Id)">
                    @w.Name
                </option>
            }
        </select>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Сохранить</button>
        <a asp-page="Employees" class="btn btn-secondary">Отмена</a>
    </div>
</form>

<form method="post" asp-page-handler="Delete" asp-route-id="@Model.Employee.Id" onsubmit="return confirm('Удалить сотрудника?');" class="mt-3">
    <button type="submit" class="btn btn-danger">Удалить сотрудника</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
