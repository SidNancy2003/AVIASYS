@page
@model AVIASYS1.Pages.Admin.Employees.EmployeesModel
@{
    ViewData["Title"] = "Управление сотрудниками";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-page="CreateEmployee" class="btn btn-success">Создать сотрудника</a>
</div>

<table class="table table-bordered table-striped align-middle">
    <thead>
        <tr>
            <th>ID</th>
            <th>ФИО</th>
            <th>Логин</th>
            <th>Пароль</th>
            <th>Роль</th>
            <th>Цех</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model.Employees)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.FullName</td>
                <td>@e.Login</td>
                <td>@e.Password</td>
                <td>@e.Role</td>
                <td>@(Model.GetWorkshopName(e.WorkshopId))</td>
                <td>
                    <a asp-page="EditEmployee" asp-route-id="@e.Id" class="btn btn-sm btn-primary">
                        Редактировать
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="/Admin/Index" class="btn btn-secondary">Главное меню</a>
</div>
