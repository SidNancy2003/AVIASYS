@page "{id?}"
@model AVIASYS1.Pages.Admin.Tasks.EditTaskModel
@{
    ViewData["Title"] = "Редактирование задачи";
}

<h2>@(Model.Task.Id == 0 ? "Создание задачи" : "Редактирование задачи")</h2>

<form method="post">
    <input type="hidden" asp-for="Task.Id" />

    <div class="mb-3">
        <label class="form-label">Название</label>
        <input asp-for="Task.Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Описание</label>
        <textarea asp-for="Task.Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Ответственный</label>
        <select asp-for="Task.AssignedEmployeeId" class="form-select">
            <option value="">— Не назначен —</option>
            @foreach (var e in Model.Employees)
            {
                <option value="@e.Id" selected="@(Model.Task.AssignedEmployeeId == e.Id)">
                    @e.FullName
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Статус</label>
        <select asp-for="Task.Status" class="form-select">
            <option value="Новое">Новое</option>
            <option value="В работе">В работе</option>
            <option value="Завершена">Завершена</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Срок</label>
        <input asp-for="Task.Deadline" type="date" class="form-control" />
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Сохранить</button>
        <a asp-page="Tasks" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@if (Model.Task.Id != 0)
{
    <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Task.Id"
          onsubmit="return confirm('Удалить задачу?');" class="mt-3">
        <button type="submit" class="btn btn-danger">Удалить задачу</button>
    </form>
}
