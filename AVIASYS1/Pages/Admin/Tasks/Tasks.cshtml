@page
@model AVIASYS1.Pages.Admin.Tasks.TasksModel
@{
    ViewData["Title"] = "Управление задачами";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-page="EditTask" class="btn btn-success">Создать задачу</a>
</div>

<!-- ===== Фильтр задач ===== -->
<form method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <label class="form-label">Статус</label>
        <select name="status" class="form-select">
            <option value="">Все</option>
            <option value="Новое" selected="@(Model.FilterStatus == "Новое")">Новое</option>
            <option value="В работе" selected="@(Model.FilterStatus == "В работе")">В работе</option>
            <option value="Завершена" selected="@(Model.FilterStatus == "Завершена")">Завершена</option>
        </select>
    </div>

    <div class="col-md-3">
        <label class="form-label">Ответственный</label>
        <select name="employeeId" class="form-select">
            <option value="">Все</option>
            @foreach (var emp in Model.Employees)
            {
                <option value="@emp.Id" selected="@(Model.FilterEmployeeId == emp.Id)">
                    @emp.FullName
                </option>
            }
        </select>
    </div>

    <div class="col-md-3 align-self-end">
        <button type="submit" class="btn btn-primary">Фильтровать</button>
        <a asp-page="Tasks" class="btn btn-secondary">Сбросить</a>
    </div>
</form>

<!-- ===== Список задач ===== -->
<table class="table table-bordered table-striped align-middle">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Ответственный</th>
            <th>Статус</th>
            <th>Срок</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Tasks.Any())
        {
            @foreach (var t in Model.Tasks)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.Title</td>
                    <td>@t.Description</td>
                    <td>@(Model.GetEmployeeName(t.AssignedEmployeeId))</td>
                    <td>@t.Status</td>
                    <td>@(t.Deadline?.ToString("dd.MM.yyyy") ?? "—")</td>
                    <td>
                        <a asp-page="EditTask" asp-route-id="@t.Id" class="btn btn-sm btn-primary">
                            Редактировать
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">Нет задач</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="/Admin/Index" class="btn btn-secondary">🏠 Главное меню</a>
</div>
